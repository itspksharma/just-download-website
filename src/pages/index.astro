---
import MainLayout from '../layouts/MainLayout.astro';
import home from '../data/home.json';
import author from '../data/author.json';
---

<MainLayout title="Just-Download">
  <!-- Main Hero -->
  <section class="bg-gradient-to-r from-indigo-600 to-blue-500 text-white py-16 px-6">
    <div class="max-w-5xl mx-auto text-center">
      <h1 class="text-4xl font-bold mb-4">{home.hero.title}</h1>
      <p class="text-lg mb-6">{home.hero.subtitle}</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href={home.hero.cta_primary_link} class="px-6 py-3 bg-white text-indigo-600 font-semibold rounded shadow hover:bg-gray-100 transition">
          {home.hero.cta_primary_text}
        </a>
        <a href={home.hero.cta_secondary_link} class="px-6 py-3 border border-white text-white font-semibold rounded shadow hover:bg-indigo-700 transition">
          {home.hero.cta_secondary_text}
        </a>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="max-w-5xl mx-auto px-6 py-12 grid md:grid-cols-3 gap-8">
    {home.features.map(feature => (
      <div class="bg-white p-6 rounded-lg shadow hover:shadow-md transition">
        <h3 class="text-xl font-semibold mb-2">{feature.title}</h3>
        <p class="text-slate-600">{feature.description}</p>
      </div>
    ))}
  </section>

  <!-- Screenshots -->
  <section class="bg-slate-100 py-12 px-6">
    <div class="max-w-5xl mx-auto">
      <h2 class="text-2xl font-bold mb-6">App Screenshots</h2>
      <div class="grid md:grid-cols-3 gap-4">
        {home.screenshots.map(shot => (
          <div class="overflow-hidden rounded-lg shadow hover:shadow-lg transition">
            <img src={shot.src} alt={shot.alt} class="w-full h-auto" loading="lazy" />
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About Hero -->
  <section class="bg-indigo-50 py-16 px-6 text-center">
    <h2 class="text-3xl font-bold mb-4">{home.about_hero.title}</h2>
    <p class="text-slate-600 mb-6">{home.about_hero.subtitle}</p>
    <a href={home.about_hero.cta_link} class="px-6 py-3 bg-indigo-600 text-white rounded shadow hover:bg-indigo-700 transition">
      {home.about_hero.cta_text}
    </a>
  </section>

  <!-- Author Message -->
  <section class="max-w-3xl mx-auto text-center py-16 px-6">
    <img src={author.photo} alt={author.name} class="w-24 h-24 rounded-full mx-auto mb-4 shadow" />
    <h3 class="text-lg font-semibold">{author.name}</h3>
    <p class="text-slate-600 italic mb-4">"{author.message}"</p>
    <a href={home.hero.cta_primary_link} class="px-5 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">
      {home.hero.cta_primary_text}
    </a>
  </section>
</MainLayout>
